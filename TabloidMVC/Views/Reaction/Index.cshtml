@model IEnumerable<TabloidMVC.Models.Reaction>

@{
    ViewData["Title"] = "Reactions";
}


<div class="container pt-5">
    <h1>Reactions</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">New Reaction</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageLocation)
                </th>
                <th>
                    @Html.DisplayName("Preview");
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageLocation)
                        </td>
                        <td>
                            <img height="75px" width="75px" src="@item.ImageLocation" />
                        </td>
                        <td width="100%">
                            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>

                        @*fa-smile-o*@
                        </td>
                    </tr>
            }
        </tbody>
    </table>

</div>